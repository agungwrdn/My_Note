<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl303131527.mynote.AddtodoList">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:gravity="top|center"
        android:text="Apa yang akan kamu lakukan"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="35dp"
        android:text="Judul"
        android:textColor="#000000"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/judul"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="35dp"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="15dp"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/tgl"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/jam"
        android:layout_alignStart="@+id/jam" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="35dp"
        android:text="Time"
        android:textColor="#000000"
        android:textSize="15dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="245dp"
        android:id="@+id/jam"/>

    <ImageButton
        android:id="@+id/voiced"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="289dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/ic_voice"
        android:background="@color/colorAccent" />
</RelativeLayout>
